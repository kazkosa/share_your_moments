.userform
  .userform_inner
    %p.project-title Share Your Moments
    %h5.page-target Create Account
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name
        = f.text_field :name, autofocus: true, placeholder: 'User Accout Name', id: "registration_name"
      .field
        = f.label :email
        = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address', id: "registration_email"

      .field
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br/
        = f.password_field :password, autocomplete: "new-password", placeholder: 'Password', id: "registration_password"
      .field
        = f.label :password_confirmation
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password', id: "registration_password_confirmation"
      .field.new-avatar-field
        = f.label :avatar
        %br/
        = f.file_field :avatar, class: "new-avatar"
      .actions
        = f.submit "Sign up",class:"submit btn btn-outline-primary"
    = render "devise/shared/links"